<style>
    a:hover {
        cursor: pointer;
    }

    .custom-validation-summary ul {
        margin: 0;
        padding: 0;
    }

    .custom-validation-summary li {
        margin-bottom: 5px;
    }
</style>
<div class="limiter">
    <div class="container-login100" >
        <div class="wrap-login100 p-l-50 p-r-50 p-t-62 p-b-33">
            <form class="login100-form validate-form flex-sb flex-w" asp-action="Login">
                <span class="login100-form-title p-b-53">
                    Sign In With
                </span>

                @* <div asp-validation-summary="All" class="text-danger"></div> *@
                @if (!ViewData.ModelState.IsValid && @Html.ValidationMessage("LoginError") != null)
                {

                    <div class="alert alert-danger" role="alert" style="margin-left: 137px;">
                        <div class="custom-validation-summary">
                            @* @Html.ValidationSummary(false) *@
                            @Html.ValidationMessage("LoginError")
                            @* @Html.ValidationMessageFor(model => model.Email) *@
                        </div>
                    </div>
                }
                @*                 <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
