<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="bread-inner">
                    <ul class="bread-list">
                        <li><a href="index1.html">Home<i class="ti-arrow-right"></i></a></li>
                        <li><a href="blog-single.html">Checkout<i class="ti-arrow-right"></i></a></li>
                        <li><a href="blog-single.html">Choose Shipping Address<i class="ti-arrow-right"></i></a></li>
