@model OnlineShoppingApp.ViewModels.ProductViewModel


<!-- Header Section -->
@section Links {

    <!-- Libraries Stylesheet -->
    <link href="./lib/animate/animate.min.css" rel="stylesheet">
    <link href="./lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="./css/style.css" rel="stylesheet">
    <style>

        a.btn {
            background: #F7941D !important;
            color: white !important;
        }

            a.btn:hover {
                background: #333 !important;
                color: white !important;
            }
    </style>
}


<body class="js">
    <div class="container-fluid pb-5 mt-2">
        <div class="row px-xl-5">

            @*  <div class="col-6">
            <h1>Products</h1>
            <br />
            <br />
            </div> *@

            @* <div class="col-6 text-right">

            <a asp-controller="Product" asp-action="InsertNewProduct" class="btn btn-primary">Add Product</a>
            <br />
            <br />
            </div> *@
            @foreach (var item in Model?.Products)
            {
                <div class="col-lg-12 mb-30 mt-4 p-3" data-product-id="@item.Id">
                    <div class="row align-items-center">
                        <div class="col-lg-4">
                            <div class="product-card">
                                <div id="product-carousel-@item.Id" class="carousel slide" data-ride="carousel">
                                    <div class="carousel-inner bg-light">
                                        @if (item.Images != null)
                                        {
                                            int index = 0;
                                            foreach (var imge in item.Images)
                                            {
                                                <div class="carousel-item @(index == 0 ? "active" : "")">
                                                 <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@item.Id">
                                                  <img class="w-100 h-100" src="@imge.Source" alt="Image">
                                                  </a>
                                                </div>
                                                index++;
                                            }
                                        }
                                        else
                                        {
                                            <p>No images available.</p>
                                        }
                                    </div>
                                    <a class="carousel-control-prev" href="#product-carousel-@item.Id" role="button" data-slide="prev">
                                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                                    </a>
                                    <a class="carousel-control-next" href="#product-carousel-@item.Id" role="button" data-slide="next">
                                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <div class="h-100 bg-light p-30">
                                <h3>
                                    <a asp-controller="Product" asp-action="GetProduct" asp-route-id="@item.Id">
                                    @item.Name
                                    </a>
                                </h3>
                                       

                                <div class="d-flex mb-3">
                                    <small class="pt-1">(@item.Comments.Count Reviews)</small>
                                </div>
                                <h3 class="font-weight-semi-bold mb-4">$@item.Price</h3>
                                <p class="mb-4">@item.Description</p>
                                <div class="mb-4">
                                    <h6 class="font-weight-semi-bold d-inline-block">Category: </h6>
                                    <p class="d-inline-block">@item.Category.Name</p>
                                </div>
                                <div class="mb-4">
                                    <h6 class="font-weight-semi-bold d-inline-block">Brand: </h6>
                                    <p class="d-inline-block">@item.Brand.Name</p>
                                </div>
                                <div class="d-flex align-items-center mb-4 pt-2 justify-content-start">
                                    <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id" class="btn  px-3 mr-2">Edit</a>
                                    <a class="btn  px-3 delete-product" data-product-id="@item.Id">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @*  <div class="col-12" style="color:white">
            <hr class="my-5">
            </div> *@
            }
        </div>
    </div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="./js/Delete.js"></script>
    <script src="js/main.js"></script>

}

</body>
</html>