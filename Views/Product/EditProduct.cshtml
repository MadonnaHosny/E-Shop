@model OnlineShoppingApp.Models.Product
<html>
<head>
    @section Links {

        <link rel="stylesheet" href="~/phone/css/intlTelInput.css">
        <link rel="stylesheet" href="~/css/UserProfile/profile.css">
    }
</head>
<body>
    <section id="contact-us" class="contact-us section">
        <div class="container">
            <div class="contact-head">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-main">
                            <div class="title">
                                <div class="user-image-container d-flex justify-content-center align-items-center">
                                    <div class="col-lg-5 mb-30">
                                        <div id="product-carousel" class="carousel slide" data-ride="carousel">
                                            <div class="carousel-inner bg-light">
                                                @if (Model.Images != null)
                                                {
                                                    int index = 0;
                                                    foreach (var item in Model.Images)
                                                    {
                                                        <div class="carousel-item @(index == 0 ? "active" : "")">
                                                            <img class="w-100 h-100" src="@item.Source" alt="Image">
                                                        </div>
                                                        index++;
                                                    }
                                                }
                                                else
                                                {
                                                    <p>No images available.</p>
                                                }
                                            </div>
                                            <a class="carousel-control-prev" href="#product-carousel" role="button" data-slide="prev">
                                                <i class="fa fa-2x fa-angle-left text-dark"></i>
                                            </a>
                                            <a class="carousel-control-next" href="#product-carousel" role="button" data-slide="next">
                                                <i class="fa fa-2x fa-angle-right text-dark"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form id="productForm" asp-controller="Product" asp-action="EditProduct" enctype="multipart/form-data">
                                <div class="row align-items-start">
                                    <div class="col-lg-12 col-mb-6">
                                        <h2>Edit Product</h2>
                                    </div>
                                    <div class="col-lg-6 col-md-6 mt-3">
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 mt-3">
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label">Description</label>
                                            <input asp-for="Description" class="form-control" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Price" class="control-label">Price</label>
                                            <input asp-for="Price" class="form-control" id="Price" style="margin-top: 9px;" />
                                            <br />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="ImageUrl" class="control-label">Upload Image</label>
                                            <input type="file" asp-for="ImageUrl" multiple class="form-control-file"
                                                   style="margin-top: 9px;" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="brandId" class="control-label">Choose Your Brand</label>
                                        </div>
                                        <div class="form-group">
                                            <select asp-for="brandId" class="form-control" asp-items="@ViewBag.Brand"></select>
                                            <span asp-validation-for="brandId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <label asp-for="categoryId" class="control-label">Choose Your Category</label>
                                        </div>
                                        <div class="form-group">
                                            <select asp-for="categoryId" class="form-control" asp-items="@ViewBag.category"></select>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group text-right">
                                            <input type="button" value="Save" class="btn btn-primary submit-btn" onclick="submitForm()" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    @section Scripts {

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/js/Edit.js">
        </script>
    }

</body>
</html>